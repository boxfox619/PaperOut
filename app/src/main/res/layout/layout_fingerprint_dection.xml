<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="70dp"
    android:gravity="center">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/layout_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="100"
        app:scale_base_height="45">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/guide_detection_fingerprint"
            android:textColor="@color/colorAccent"
            android:layout_weight="0.5"
            app:scale_width="100"
            app:scale_height="13"
            app:scale_top="0"
            app:scale_left="0"
            app:scale_textsize="7"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_guide"
        android:layout_above="@+id/layout_submit"
        android:src="@drawable/handprint"/>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/layout_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:scale_base_width="100"
        app:scale_base_height="55">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/enter_password_direct"
            android:layout_weight="0.5"
            app:scale_width="100"
            app:scale_height="13"
            app:scale_top="33"
            app:scale_left="0"
            app:scale_textsize="6"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</RelativeLayout>