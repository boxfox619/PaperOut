<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hellochain.paperoutapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SigninActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.SignupActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".activity.RequestedPaperActivity" />
        <activity
            android:name=".activity.PaperPrintActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.SetPasswordActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.SetPinActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".DownloadPaperActivity"
            android:theme="@style/NoActionBar" ></activity>
    </application>

</manifest>